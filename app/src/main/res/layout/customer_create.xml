<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CustomerCreate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_login" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:padding="15dp">

                <TableLayout
                    android:id="@+id/tableCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <TableRow android:id="@+id/rowCustomerEmail">

                        <TextView
                            android:padding="1dp"
                            android:text="@string/email" />

                        <EditText
                            android:id="@+id/fieldCustomerEmail"
                            android:padding="1dp"
                            android:text="" />
                    </TableRow>

                    <TableRow android:id="@+id/rowCustomerPassword">

                        <TextView
                            android:padding="1dp"
                            android:text="@string/password" />

                        <EditText
                            android:id="@+id/fieldCustomerPassword"
                            android:padding="1dp"
                            android:text="" />
                    </TableRow>

                    <TableRow android:id="@+id/rowCustomerPhone">

                        <TextView
                            android:padding="1dp"
                            android:text="@string/customer_phone" />

                        <EditText
                            android:id="@+id/fieldCustomerPhone"
                            android:padding="1dp"
                            android:text="" />
                    </TableRow>

                    <TableRow android:id="@+id/rowCustomerFio">

                        <TextView
                            android:padding="1dp"
                            android:text="@string/customer_fio" />

                        <EditText
                            android:id="@+id/fieldCustomerFio"
                            android:padding="1dp"
                            android:text="" />
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/createButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tableCustomer"
                    android:text="@string/create"
                    android:textAllCaps="false" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>