<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/parking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Яхт клуб надежда"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textStyle="normal|italic" />
            <TextView
                android:id="@+id/parking_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Комсомольское шоссе 31"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:textStyle="normal|italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Местоположение:"
                android:textSize="16dp"
                android:textStyle="normal|italic" />
            <TextView
                android:id="@+id/parking_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latitude"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:textStyle="normal|italic" />
            <TextView
                android:id="@+id/parking_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="longitude"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:textStyle="normal|italic" />
        </LinearLayout>
        <HorizontalScrollView
            android:id="@+id/parking_image_horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/unnamed" />
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/unnamed" />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/parking_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Асистенты"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="normal|italic" />
        <HorizontalScrollView
            android:id="@+id/parking_account_horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/nobody" />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/parking_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Транспорт"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="normal|italic" />
        <HorizontalScrollView
            android:id="@+id/parking_transport_horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/samokat" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/samokat" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/samokat" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/samokat" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/samokat" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/samokat" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/samokat" />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="1dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/samokat" />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/parking_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удобная уютная бухта. Дружная компания. Всегда довольные посетители"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="normal|italic"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>
